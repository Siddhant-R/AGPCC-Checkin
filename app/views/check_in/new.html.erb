<div class="container">
  <h2 class="section-subheading">Check-In</h2>
      <div class="jumbotron">
          <h1><%= @event.venue %></h1>
          <h3><%= @event.title %> </h3>
          <h4> <%= @event.description %></h4>
          <h3 class="blink">&#9673; Live</h3>
      </div>

  <div class="form-box">
  
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  
    <%= form_tag(:action => 'create' , :method => 'POST', :id => @event.id, :class => 'form-group') do %>
    <h1>Please enter your email id to check in:</h1>
    <%= email_field(:member, :email, :class=> 'form-control input-lg') %>
    <br>
    <%= submit_tag "Check In", :class => "btn btn-lg btn-warning"  %>
    <% end %>
    <%- unless @lat_lng %>
      
    <%- end %>
  </div>

</div>