<div class="container">
    <h2 class="section-subheading"> AGPCC Event Managament System</h2><br>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div class="container">
    <% if @current_events.any? %>
      <h3>Ongoing Events</h3>
      <table class="table table-hover">
      <thead>
        <tr>
          <th>Event</th>
          <th>Venue</th>
          <th>Ending</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @current_events.each do |event| %> 
            <tr>
              <td><%= event.title %></td>
              <td><%= event.venue %></td>
              <td><%= event.end_time.to_formatted_s(:short) %></td>
              <td><%= link_to 'Check In',controller: "check_in", action: "new", id: event.id %></td>
            </tr>
        <% end %>
      </tbody>
      </table>
    <% else %>
      <h3>No ongoing Events</h3>
      <br><br>
    <% end %>
</div>
<div class="container">
  <% if @future_events.any? %>
    <h3>Future Events</h3>
    <table class="table table-hover">
    <thead>
      <tr>
        <th>Event Title</th>
        <th>Venue</th>
        <th>From</th>
        <th>Till</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @future_events.each do |event| %> 
          <tr>
            <td><%= event.title %></td>
            <td><%= event.venue %></td>
            <td><%= event.start_time.to_formatted_s(:short) %></td>
            <td><%= event.end_time.to_formatted_s(:short) %></td>
            <td><%= link_to 'R.S.V.P.',controller: "rsvp", action: "new", id: event.id %></td> 
          </tr>
      <% end %>
    </tbody>
    </table>
    <% end %>
</div>
